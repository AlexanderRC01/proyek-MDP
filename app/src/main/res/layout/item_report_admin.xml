<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Judul laporan -->
        <TextView
            android:id="@+id/reportTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Laporan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <!-- Nama Pengirim -->
        <TextView
            android:id="@+id/reportUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dikirim oleh: user@example.com"
            android:textSize="12sp"
            android:textColor="#777777"
            android:layout_marginTop="4dp" />

        <!-- Waktu -->
        <TextView
            android:id="@+id/reportTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 jam lalu"
            android:textSize="12sp"
            android:textColor="#777777" />

        <!-- Deskripsi -->
        <TextView
            android:id="@+id/reportDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi laporan..."
            android:textSize="14sp"
            android:textColor="#555555"
            android:layout_marginTop="8dp"
            android:maxLines="3"
            android:ellipsize="end" />

        <!-- Tombol aksi -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="12dp">

            <Button
                android:id="@+id/btnViewDetail"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Lihat"
                android:textAllCaps="false"
                android:backgroundTint="#2980B9"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"/>

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="Hapus"
                android:textAllCaps="false"
                android:backgroundTint="#E74C3C"
                android:textColor="#FFFFFF"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
