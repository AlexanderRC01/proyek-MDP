<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Chart 1: Jumlah laporan per hari -->
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/barChartDaily"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp" />

        <!-- Chart 2: Kategori terbanyak -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartCategory"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp" />

        <!-- Chart 3: Tingkat respon -->
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartStatus"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp" />

        <!-- Tambahan fitur -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter Berdasarkan Tanggal"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <Button
            android:id="@+id/btnFilterByDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Tanggal"
            android:layout_marginBottom="12dp" />

        <Button
            android:id="@+id/btnExportPdf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Export ke PDF"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statistik Berdasarkan User/Moderator"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <Spinner
            android:id="@+id/spinnerUserModerator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp" />

    </LinearLayout>
</ScrollView>
